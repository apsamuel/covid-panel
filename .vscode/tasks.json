{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Bokeh: Start Chrome Debugging Instance",
      "type": "shell",
      "command": "open -n -b com.google.Chrome --args --no-first-run --no-default-browser-check --new-window --user-data-dir=${env:HOME}/.chrome-developer --remote-debugging-port=9222"
    },
    {
      "label": "Bokeh: Run This Workspace",

      "type": "shell",
      "command": "DEBUG_APP=false /Users/photon/Anaconda/anaconda3/envs/pyviz2/bin/bokeh serve --log-level debug --dev --show ${workspaceFolder}",
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Bokeh: Run This Workspace (debug)",

      "type": "shell",
      "command": "DEBUG_APP=true /Users/photon/Anaconda/anaconda3/envs/pyviz2/bin/bokeh serve --log-level debug --dev --show ${workspaceFolder}",
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    }
  ]
}